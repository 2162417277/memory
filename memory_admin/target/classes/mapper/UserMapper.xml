<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.gnahz.mapper.UserMapper">
    <!--根据用户userName查询用户密码-->
    <select id="selectPasswordByName" resultType="java.lang.String">
        SELECT `password` FROM `user` WHERE user_name = #{userName};
    </select>
    <select id="findByUsername" resultType="java.lang.Integer">
        SELECT `user_id` FROM `user` WHERE user_name = #{userName};
    </select>
</mapper>